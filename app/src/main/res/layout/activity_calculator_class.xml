<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:gravity="left"
    android:layout_gravity="left"
    tools:context=".Activities.CalculatorClass">

    <include
        layout="@layout/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/calculate_toolbar"
        ></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:orientation="vertical"
        android:layout_below="@+id/calculate_toolbar"
        android:background="@drawable/firstlinearbg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_marginLeft="15dp"
            android:background="@drawable/firstlinearbg">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Product Name"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:gravity="left"
                android:id="@+id/productnametx"
                android:textAllCaps="false"
                android:layout_weight="0.5"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:text="Application Basic Cleaning (toilet bowls):"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:gravity="left"
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.5"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/firstlinearbg"
                android:layout_weight="0.5"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Arena in Square meters"
                    android:textColor="@android:color/white"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:layout_gravity="end"
                    android:gravity="right"
                    android:textAllCaps="false"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="12"
                    android:padding="5dp"
                    android:id="@+id/result"
                    android:background="@null"
                    android:textColorHint="@android:color/white"
                    android:textColor="@android:color/white"
                    android:gravity="right"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:inputType="number"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/secondlinearbg"
                android:layout_weight="0.5"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Consumption in ml"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:layout_gravity="end"
                    android:padding="10dp"
                    android:gravity="end"
                    android:textAllCaps="false"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:hint="60"
                    android:id="@+id/consedit"
                    android:textColorHint="@android:color/white"
                    android:textColor="@android:color/white"
                    android:gravity="end"
                    android:textSize="15sp"
                    android:background="@null"
                    android:textAllCaps="false"
                    android:inputType="number"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
