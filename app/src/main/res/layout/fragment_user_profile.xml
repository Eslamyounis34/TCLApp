<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.UserProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <include
        android:id="@+id/activitytoolbar"
        layout="@layout/basictoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/parentlayout"
        android:layout_below="@id/activitytoolbar"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Pick Image"
            android:layout_marginRight="10dp"
            android:textColor="#0069c0"
            android:layout_toRightOf="@id/userImage"
            android:id="@+id/pickImageim"
            android:layout_centerHorizontal="true"
            android:src="@drawable/addimageicon"
            android:layout_below="@id/userImage"
            ></ImageView>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/userImage"
            app:civ_circle_background_color="#707070"
            app:civ_border_color="#707070"
            app:civ_border_width="2dp"
            android:src="@drawable/userunknownpng"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            ></de.hdodenhof.circleimageview.CircleImageView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/pickImageim"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp"
                android:id="@+id/firstrelativelayout"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/loggedusername"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editusername"
                    android:text="Edit"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:textColor="#0069c0"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:layout_gravity="end"
                    ></TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:id="@+id/secondone"
                android:layout_below="@id/firstrelativelayout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/loggeduseremail"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:layout_marginTop="10dp"
                    ></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edituseremail"
                    android:text="Edit"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:textColor="#0069c0"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:layout_gravity="end"
                    ></TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/secondone"
                android:layout_margin="20dp"
                android:id="@+id/thirdone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/loggeduserPhone"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edituserphone"
                    android:text="Edit"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:textColor="#0069c0"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:layout_gravity="end"
                    ></TextView>
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@id/parentlayout"
            android:text="logout"
            android:id="@+id/LogoutButton"
            ></Button>

</RelativeLayout>