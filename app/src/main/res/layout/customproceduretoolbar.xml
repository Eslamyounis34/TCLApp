<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0069c0">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:id="@+id/procedure_custom_app_toolbar"
            android:layout_height="?attr/actionBarSize">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/toolbarbackicon"
                    android:layout_marginBottom="10dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/procedurebackicon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:id="@+id/proceduretoolbaractivityname"
                    android:layout_marginLeft="10dp"
                    android:text="Cleaning Procedure"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/procedurebackicon"
                    android:textColor="#fff"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:layout_toRightOf="@id/procedurebackicon"
                    android:layout_below="@id/proceduretoolbaractivityname"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Activity"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Materials"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        />

                </LinearLayout>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

</RelativeLayout>