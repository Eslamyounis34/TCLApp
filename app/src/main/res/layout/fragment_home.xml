<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="Fragments.HomeFragment">
    <include
        android:id="@+id/activitytoolbar"
        layout="@layout/basictoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <ImageView
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:layout_below="@id/activitytoolbar"
        android:src="@drawable/applogo"
        android:layout_centerHorizontal="true"
        android:id="@+id/logo"
        android:layout_marginTop="30dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/logo"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_centerInParent="true"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/first_two"
                android:layout_weight="1"
                android:weightSum="2">
                <Button
                    android:id="@+id/prodcuts_button"
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:background="@drawable/button_background"
                    android:drawableTop="@drawable/productsiconn"
                    android:text="Products"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    />
                <Button
                    android:id="@+id/producer_button"
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:drawableTop="@drawable/procedureiconnn"
                    android:layout_marginTop="10dp"
                    android:text="Cleaning Procedure"
                    android:textAllCaps="false"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:textColor="@android:color/white" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/second_two"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_toRightOf="@id/first_two">
                <Button
                    android:id="@+id/cleaning_button"
                    android:layout_weight="1"
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:background="@drawable/button_background"
                    android:drawableTop="@drawable/recommendationsiconnn"
                    android:layout_marginLeft="10dp"
                    android:text="Cleaning Recommendation"
                    android:padding="10dp"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:textColor="@android:color/white" />
                <Button
                    android:id="@+id/consultants_button"
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Consultants Nearby"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:textColor="@android:color/white"
                    android:drawableTop="@drawable/groupsiconn"
                    />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>