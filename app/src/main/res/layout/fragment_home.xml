<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.HomeFragment">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/applogo"
        android:id="@+id/logo"
        android:layout_marginTop="80dp"></ImageView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/logo"
        android:layout_centerInParent="true"
        android:weightSum="2"
        android:layout_marginTop="80dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/first_two"
            android:layout_weight="1"
            android:weightSum="2">
            <Button
                android:id="@+id/prodcuts_button"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:drawableTop="@drawable/products2"
                android:text="Products"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                />
            <Button
                android:id="@+id/producer_button"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:drawableTop="@drawable/procedure"
                android:layout_marginTop="10dp"
                android:text="Cleaning
            Procedure"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textColor="@android:color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/second_two"
            android:layout_weight="1"
            android:weightSum="2"
            android:layout_toRightOf="@id/first_two">
            <Button
                android:id="@+id/cleaning_button"
                android:layout_weight="1"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:background="@drawable/button_background"
                android:drawableTop="@drawable/ic_verified_user_black_24dp"
                android:layout_marginLeft="10dp"
                android:text="Cleaning Recommendation"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textColor="@android:color/white" />
            <Button
                android:id="@+id/consultants_button"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Consultants
            Nearby"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:drawableTop="@drawable/consultants"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>